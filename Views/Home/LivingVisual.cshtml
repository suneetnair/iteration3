    <script>
        $.ajax({
            url: 'getData',
            type: 'GET',
            data: {},
            dataType: 'JSON',
            success: function (response) {
                //console.log(response.stauts);
                //console.log(response.msg);
                console.info(response);
                var data = response;
                var ac = 0;
                var heater = 0;
                var toplamp = 0;
                var standlamp = 0;
                var stereo = 0;
                var tv = 0;

                for (var i = 0; i < data.length; i++) {
                    if (data[i].applianceType == 'air_conditioner') {
                        var ac = data[i].visualTreeNumber;
                    }

                    else if (data[i].applianceType == 'heater') {
                        var heater = data[i].visualTreeNumber;

                    }
                    else if (data[i].applianceType == 'lamp') {
                        var toplamp = data[i].visualTreeNumber;
                        var standlamp = data[i].visualTreeNumber;

                    }

                    else if (data[i].applianceType == 'stereo') {
                        var stereo = data[i].visualTreeNumber;

                    }
                    else if (data[i].applianceType == 'television') {
                        var tv = data[i].visualTreeNumber;

                    }
                    else {
                        continue;

                    }


                }


                document.getElementById("toplight_tree_num").innerHTML = toplamp + " tree";
                document.getElementById("standlight_tree_num").innerHTML = standlamp + " tree";
                document.getElementById("stereo_tree_num").innerHTML = stereo + " trees";
                document.getElementById("tv_tree_num").innerHTML = tv + " trees";
                document.getElementById("heater_tree_num").innerHTML = heater + " trees";
                document.getElementById("ac_tree_num").innerHTML = ac + " trees";


            }
        })

        var navButton = document.querySelector('.navigation-button');
        var navMenu = document.querySelector('.navigation-menu');
        var win = window;

        function openMenu(event) {

            navButton.classList.toggle('active');
            navMenu.classList.toggle('active');

            event.preventDefault();
            event.stopImmediatePropagation();
        }

        function closeMenu(event) {
            if (navButton.classList.contains('active')) {
                navButton.classList.remove('active');
                navMenu.classList.remove('active');
            }
        }
        navButton.addEventListener('click', openMenu, false);
        win.addEventListener('click', closeMenu, false);
    </script>
